<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Style for TextInputEditText -->
    <style name="TextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textSize">16sp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
    </style>

    <!-- Style for TextInputLayout -->
    <style name="Widget.MaterialComponents.TextInputLayout.OutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox" tools:ignore="ResourceCycle">
        <item name="boxBackgroundColor">?attr/colorSurface</item>
        <item name="boxStrokeColor">?attr/colorPrimary</item>
        <item name="android:textColorHint">?attr/colorOnSurface</item>
        <item name="hintTextAppearance">@style/TextInputHintStyle</item>
    </style>

    <!-- Style for Hint Text -->
    <style name="TextInputHintStyle" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Common style for MaterialButton -->
    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#7C4DFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="MyTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorSecondary</item>
        <item name="hintAnimationEnabled">true</item>
    </style>

    <!-- Customize TextInputEditText -->
    <style name="MyTextInputEditTextStyle" parent="Widget.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/colorSecondary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="MyMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <!-- Set button background tint -->
        <item name="backgroundTint">@color/colorPrimary</item>

        <!-- Set the text color -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Set the corner radius for rounded corners -->
        <item name="cornerRadius">8dp</item>

        <!-- Set bold text style -->
        <item name="android:textStyle">bold</item>

        <!-- Set button height -->
        <item name="android:layout_height">62dp</item>

        <!-- Set button width -->
        <item name="android:layout_width">377dp</item>
    </style>

</resources>

